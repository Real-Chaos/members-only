<div class="user-profile-card">
	<img
		src="<%= user.profile_image_url %>"
		alt="User Avatar"
		class="profile-image"
	/>
	<div class="profile-details">
		<h3 class="username"><%= user.username %></h3>
		<p class="status">âš¡ <%= user.special_line %></p>
		<p class="about-me">"<%= user.description %>"</p>
		<p class="date-joined">Member Since: <%= new Date(user.joined_date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></p>
		<a href="/logout" class="logout-button">Log Out</a>
	</div>
</div>
